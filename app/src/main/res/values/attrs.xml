<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LinearGradientView">
        <attr name="startColor" format="color|reference" />
        <attr name="middleColor" format="color|reference" />
        <attr name="endColor" format="color|reference" />
        <attr name="tileMode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RoundIndicatorView">
        <attr name="startAngel" format="integer|reference" />
        <attr name="sweepAngel" format="integer|reference" />
        <attr name="maxNum" format="integer|reference" />
        <attr name="sweepInWidth" format="dimension|reference" />
        <attr name="value" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="MoneyScaleView">
        <attr name="moneyScale" format="integer|reference" />
        <attr name="maxValue" format="integer|reference" />
        <attr name="minValue" format="integer|reference" />
        <attr name="money" format="integer|reference" />
    </declare-styleable>


